
  <h2><%= @user_riddle %></h2>

  <form autocomplete="off" action='/output' method="post">
  <div class="form-group">
     <label for="ans">Answer the riddle</label>
     <input id="ans" name="ans" class="form-control" type="text" autocomplete="off">
     <input type="hidden" name="question" id="question" value="<%= @user_riddle %>">
  </div>

  <button type="submit">Next Riddle</button>
</form>
